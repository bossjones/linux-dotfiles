export PYENV_ROOT="$HOME/.pyenv"

export PYENV_VERSION=3.5.2

export WORKON_HOME=~/.virtualenvs
export PROJECT_HOME=~/dev

eval "$(pyenv init -)"
# Also note that I did not include the command pyenv virtualenv init in ~/.bashrc unlike the documentation suggests. This is on purpose: activate both extensions causes conflicts.
# eval "$(pyenv virtualenv-init -)"

# To get virtualenvwrapper to create a virtual environment using pyvenv instead of virtualenv, set the PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV environment variable.
export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"

